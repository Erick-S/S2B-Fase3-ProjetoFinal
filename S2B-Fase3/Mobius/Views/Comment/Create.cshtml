@model Mobius.Models.Comment

@{
    ViewBag.Title = "Create";
}

<h2>Perguntar em @ViewBag.ProductName</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Comment</h4>
        <hr />
        <p>Teste announcer email -> @ViewBag.AnnouncerEmail</p>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <input type="hidden" name="id" value="@ViewBag.ProductID" />
        <input type="hidden" name="announcerEmail" value="@ViewBag.AnnouncerEmail" />

        <div class="form-group">
            @Html.LabelFor(model => model.Comentario, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Comentario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Comentario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Comentar" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar aos produtos", "Index", "Product")
</div>
